{%  extends 'layout.twig' %}

{% block content %}
    <div class="container mt-5 mb-3">
        <div class="row">
            <div class="col-sm-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        {% if error is defined %}
                            <div class="alert alert-danger">
                                {{  error }}
                            </div>
                        {% endif %}
                        <h3>Redirecting to {{ vote_link['title'] }}</h3>
                        <p class="mb-0">Please wait just a moment...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{%  endblock %}